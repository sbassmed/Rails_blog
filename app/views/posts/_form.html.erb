<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= form_title %></h1>
			<%= form_for @post do |f|  %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :body %>
					<%= f.text_area :body, class: "form-control", rows: "10" %>
				</div>

				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
